<%- include('partials-header') %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>}
        <% } %>
        <form class="add-book-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Insira o título do livro" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="autor" id="autor" placeholder="Insira o nome do(a) autor(a)" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="editora" id="editora" placeholder="Insira o nome da editora" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="ano" id="ano" placeholder="Insira o ano de publicação do livro" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="isbn" id="isbn" placeholder="Insira o ISBN do livro" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="idioma" id="idioma" placeholder="Insira o idioma do livro">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <label for="book-img"><b>Capa do Livro</b></label><br>
                    <input type="file" name="image" id="book-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Adicionar Livro</button>
        </form>
    </div>
</div>
</body>
</html>